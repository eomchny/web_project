<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>userFrontController</servlet-name>
        <servlet-class>user_Controller.userFrontController</servlet-class>

        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>userFrontController</servlet-name>
        <url-pattern>*.user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productFrontController</servlet-name>
        <servlet-class>product_Controller.productFrontController</servlet-class>

        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>productFrontController</servlet-name>
        <url-pattern>*.product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lookbookFrontController</servlet-name>
        <servlet-class>lookbook_Controller.lookbookFrontController</servlet-class>

        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>lookbookFrontController</servlet-name>
        <url-pattern>*.lookbook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reviewFrontController</servlet-name>
        <servlet-class>review_Controller.reviewFrontController</servlet-class>

        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>reviewFrontController</servlet-name>
        <url-pattern>*.rev</url-pattern>
    </servlet-mapping>
</web-app>

